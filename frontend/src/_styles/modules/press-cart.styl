.ui-press-cart
    box-shadow 0px 3px 5px 0px rgba(0, 0, 0, 0.1)
    display flex
    flex-direction column
    margin-bottom 30px

    &:hover &__img
        &:after
            position absolute
            content ''
            width 100%
            height 100%
            background rgba(0, 0, 0, 0.4)

    &__img
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover
        height 241px
        position relative

    &__content
        background $color-whitesmoke
        padding 20px 12px 36px
        position relative
        flex 1

    &__title
        border-bottom 1px solid #c5c5c5
        font-family 'Panton'
        font-size 20px
        color #282828
        line-height 26px
        font-weight bold
        padding-bottom 18px
        min-height 70px

    &__description
        font-family 'Panton'
        font-size 16px
        color #282828
        line-height 20px
        padding-top 28px

    &__link
        width 51px
        height 51px
        position absolute
        bottom 0
        right 0
