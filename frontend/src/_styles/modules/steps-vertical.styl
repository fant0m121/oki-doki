.ui-steps-vertical
    margin 0
    padding 0
    list-style none
    counter-reset section

    li
        position relative
        padding-left 30px
        line-height 20px

        &:before
            position absolute
            left 0
            top 0
            counter-increment section
            content counter(section)
            color red
            display block
            border-radius 50%
            border 1px solid red
            line-height 20px
            height 20px
            width 20px
            text-align center

        &:after
            content ''
            display block
            position absolute
            height calc(100% - 9px)
            border 2px solid #f00
            left 9px
            top 20px

        &:last-child:after
            display none

    li + li
        padding-top 10px

        &:before
            top 11px

        &:after
            top 31px
            height calc(100% - 20px)
