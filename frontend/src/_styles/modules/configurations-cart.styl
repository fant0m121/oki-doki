.ui-configurations-cart
    box-shadow 0px 3px 21px 0px rgba(0, 0, 0, 0.1)
    border-top 7px solid $color-smokyblack
    display flex
    margin 15px 0

    &__title
        background-repeat no-repeat
        background-size cover
        background-position 50% 50%
        min-height 238px
        height 100%
        width 100%
        font-family 'Panton'
        font-size 20px
        color #fff
        text-align left
        line-height 32px
        display flex
        align-items center
        justify-content center
        font-weight bold

    &__description
        width 100%
        background #f9f9f9
        padding 14px 17px

    &__header
        font-family 'Panton'
        font-size 18px
        color #1b1b1b
        line-height 26px
        font-weight bold
        padding-bottom 29px
