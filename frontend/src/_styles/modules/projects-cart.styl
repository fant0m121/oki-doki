.ui-projects-cart
    box-shadow 0px 3px 21px 0px rgba(0, 0, 0, 0.1)
    width 100%
    margin 15px 0
    display flex
    flex-direction column

    &:hover &__title
        background rgba(214, 80, 69, 0.7)
        transition all 0.45s ease-in-out

    &__img
        height 293px
        background-size cover

    &__title
        background rgba(0, 0, 0, 0.4)
        font-family 'Panton'
        font-size 26px
        text-align center
        line-height 30px
        color #fff
        font-weight bold
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center
        text-decoration none

    &__description
        background $color-whitesmoke
        color $color-darkjunglegreen
        font-family 'Panton'
        flex 1
        position relative

    &__time
        font-size 20px
        font-weight bold
        line-height 73px
        border-bottom 1px solid #c5c5c5
        margin 0 5px 0 17px

        span
            font-weight normal
            padding-left 10px

    &__text
        padding 30px 75px 25px 17px
        font-size 16px

    &__link
        position absolute
        bottom 0
        right 0
        width 60px
        height 60px
