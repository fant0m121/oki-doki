.ui-material-box
    font-family 'Panton'
    font-size 26px
    color #ffffff
    background #000
    line-height 22px
    display flex
    align-items center
    justify-content space-between
    background-repeat no-repeat
    background-size cover
    background-position 50% 50%
    height 75px
    width 100%
    margin-bottom 50px

    &__title
        padding-left 28px

    &__link
        width 75px
        height 75px

.ui-material-block
    box-shadow 0px 3px 5px 0px rgba(0, 0, 0, 0.1)
    min-height 100%
    display flex
    flex-direction column

    &__title
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover
        font-family 'FiraSans'
        font-size 26px
        color #ffffff
        line-height 22px
        font-weight bold
        padding 32px 18px 29px

    &__description
        background $color-whitesmoke
        font-family 'Panton'
        font-size 16px
        color #090909
        line-height 20px
        padding 18px 18px 25px 18px
        flex 1
