.ui-product-cart-small
    background $color-bondiblue
    color #fff
    font-family 'Panton'
    width 100%
    box-shadow 0px 3px 21px 0px rgba(0, 0, 0, 0.2)

    &--darkcoral
        background $color-darkcoral

    &__title
        font-size 26px
        line-height 32px
        border-bottom 1px solid #43b4bb
        padding 27px 30px 15px 30px

        &--darkcoral
            border-bottom 1px solid #df7d76

    &__description
        font-size 20px
        line-height 26px
        padding 25px 30px 30px 30px

    &__footer
        background #fff
        color $color-smokyblack
        font-weight bold
        font-size 26px
        line-height 32px
        position relative

    &__link
        width 79px
        height 79px
        position absolute
        bottom 0
        right 0

    &__price
        padding 37px 79px 20px 30px

    &__time
        padding 0 79px 20px 30px

.ui-product-cart-mini
    font-family 'Panton'
    font-size 17px
    color #fff
    line-height 22px
    font-weight bold
    display flex
    justify-content space-between

    &__link
        width 122px

    &__info
        width 100%
        position relative

    &__title
        position absolute
        top 20px
        left 20px

    &__price
        position absolute
        bottom 20px
        left 20px

.ui-product-cart
    box-shadow 0px 3px 21px 0px rgba(0, 0, 0, 0.2)
    position relative

    &:hover &__description
        background $color-bondiblue

    &:hover &__link
        & .ui-circle-button
            &:before
                background #250b09

    &__title
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover
        height 294px
        display flex
        justify-content center
        align-items center
        text-align center
        font-family 'FiraSans'
        font-size 26px
        color #ffffff
        line-height 30px
        font-weight bold

    &__description
        font-family 'Panton'
        font-size 16px
        color #090909
        padding 25px 65px 40px 25px
        display flex
        align-items center
        height 119px

    &__link
        position absolute
        bottom 0
        right 0
        width 60px
        height 60px
