.ui-text-block
    box-shadow 0px 3px 5px 0px rgba(0, 0, 0, 0.1)
    display flex
    flex-direction column
    height 100%

    &__title
        background $color-darkcoral
        color #fff
        font-family 'Panton'
        font-size 26px
        font-weight bold
        line-height 32px
        padding 23px 22px 25px

        &--grey
            background #f9f9f9
            color #090909
            padding-bottom 5px

        &--small
            font-size 20px
            color #1c282a
            line-height 32px
            padding-top 19px
            margin-top 20px

    &__text
        padding 25px 22px 32px
        background #f9f9f9
        font-family 'Panton'
        font-size 16px
        color #090909
        line-height 20px
        height 100%

        a
            color $color-darkcoral
            text-decoration underline

    &__text-italic
        font-family 'PantonRI'

    &__text-big
        font-size 20px
