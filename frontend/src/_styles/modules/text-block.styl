.ui-text-block
    box-shadow 0px 3px 5px 0px rgba(0, 0, 0, 0.1)
    display flex
    flex-direction column
    min-height 100%

    &__title
        background $color-darkcoral
        color #fff
        font-family 'Panton'
        font-size 26px
        font-weight bold
        line-height 32px
        padding 23px 22px 25px

        &--black
            background #1e1e1e
            color #f9f9f9
            padding 0
            display flex
            align-items center
            justify-content center
            text-align center
            height 95px

        &--grey
            background #f9f9f9
            color #090909
            padding-bottom 5px

        &--small
            font-size 20px
            color #1c282a
            line-height 32px
            padding-top 19px
            margin-top 20px

        &--mini
            font-size 20px
            color #1c282a
            line-height 32px
            padding-top 19px

    &__img
        width 100%
        max-height 425px
        overflow hidden

    &__photo
        width 100%
        max-height 214px
        overflow hidden

    &__flex
        display flex

    &__list
    &__content
    &__text
        padding 25px 22px 32px
        background #f9f9f9
        font-family 'Panton'
        font-size 16px
        color #090909
        line-height 20px
        flex 1

        a
            color $color-darkcoral
            text-decoration underline
            cursor pointer

        span
            font-weight bold

    &__list
        padding 0 22px 0

    &__content
        padding 20px 0 0 0

    &__text-italic
        font-family 'Panton'
        padding-bottom 20px
        font-style italic

    &__text-big
        font-size 20px
        line-height 26px

    &__text-average
        font-size 20px
        color #1c282a
        line-height 20px
        font-weight bold

    &__textbold
        font-weight bold
        text-align center
        padding 40px 0 20px 0

        &--left
            text-align left
            padding 0

        span
            font-weight normal

    &__step
        font-family 'Panton'
        font-size 16px
        color #1c282a
        line-height 26px
        font-weight bold

    ul:not('.ui-steps-vertical')
        padding-top 20px

        li
            text-indent 30px
            list-style none
            font-weight normal
