.ui-input
    background-color #f5f5f5
    border-radius 3px
    padding 14px 34px
    height 48px
    font-size 16px
    border 0
    color $color-dark

    &--block
        width 100%

.ui-textarea
    background-color #f5f5f5
    border-radius 3px
    padding 14px 34px
    height 84px
    font-size 16px
    border 0

.ui-form
    background $color-dark
    box-shadow 0px 3px 5px 0px rgba(0, 0, 0, 0.1)
    font-family 'Rubik'
    color #fff

    &--red
        background $color-darkcoral

.ui-form-calcalate

    &__header
        padding-top 28px
        padding-bottom 22px

    &__content
        padding-top 28px
        padding-bottom 22px

        .ui-input
            margin-bottom 15px

            @media (min-width: $breakpoints['md'])
                margin-bottom 0

    &__title
        font-size 26px
        line-height 32px
        padding-bottom 27px

    &__about
        display flex
        align-items center
        padding-top 25px

    &__text
        padding-left 16px

    &__icon
        border 1px solid #fff
        border-radius 50%
        width 31px
        height 31px
        display flex
        align-items center
        justify-content center

.ui-form-akcia
    display flex
    flex-direction column
    padding 28px 50px 36px

    input
        margin 8px 0

    textarea
        margin 8px 0

    label
        font-family 'Rubik'
        font-size 14px
        color #f5f5f5
        line-height 32px
        padding 0 22px

    p
        font-family 'Rubik'
        font-size 16px
        color #fafafa
        text-align center
        line-height 20px
        padding-top 28px

    &__title
        font-size 26px
        line-height 32px
        padding-bottom 20px
        text-align center

    &__line
        padding 8px 0 16px

.ui-form-request
    padding 30px 20px 34px 24px

    &__title
        font-family 'Rubik'
        font-size 26px
        color #ffffff
        line-height 32px
        padding-bottom 15px

    &__description
        font-family 'Rubik'
        font-size 16px
        color #fafafa
        line-height 20px
        padding 12px 0

    input
        margin-bottom 16px

    textarea
        min-height 112px
        width 100%
