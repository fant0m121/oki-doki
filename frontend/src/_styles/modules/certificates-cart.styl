.ui-certificates-cart
    box-shadow 0px 3px 5px 0px rgba(0, 0, 0, .1)
    background #f9f9f9
    border-top 6px solid $color-darkcoral
    display flex
    flex-direction column
    text-align center
    align-items center
    padding 20px 20px 23px 20px
    margin-bottom 32px

    &__title
        font-family 'Panton'
        font-size 20px
        color #090909
        line-height 20px
        font-weight bold

    &__img
        padding 23px 0

    &__description
        font-family 'Panton'
        font-size 16px
        color #090909
        line-height 20px
