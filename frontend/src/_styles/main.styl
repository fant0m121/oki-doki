// Normalize Styles
@import '../../node_modules/normalize.css/normalize.css';

// Import Modules
@import '../_modules/link/link';
@import '_variable';
@import 'modules\fonts';
@import 'modules\button';
@import 'modules\steps-vertical';
@import 'modules\form';

@import '../../node_modules/flexbox-grid-stylus/src/mixins/helpers'
@import '../../node_modules/flexbox-grid-stylus/src/mixins/grid-framework'
@import '../../node_modules/flexbox-grid-stylus/src/mixins/bem'

// Components
@import '../../node_modules/flexbox-grid-stylus/src/components/col'
@import '../../node_modules/flexbox-grid-stylus/src/components/grid'
@import '../../node_modules/flexbox-grid-stylus/src/components/row'
@import '../../node_modules/flexbox-grid-stylus/src/components/text'

init($breakpoints, $columns)
// Box sizing partial styles
// Apply a natural box layout model to all elements

*,
*:before,
*:after
    box-sizing border-box
    outline 1px dashed green

.ui-header
    display flex
    flex-direction column

.ui-header__content
    background-color $color-white
    padding 20px 0

.ui-restriction
    max-width 1530px
    margin 0 auto
    padding 0

.ui-header__info
    font-family 'Scada'
    font-size 12px
    line-height 16px
    color $color-trolleygrey
    justify-content space-between
    text-transform uppercase
    padding-right 300px

.ui-header__menu
    background-color $color-isabelline

.ui-header__logo
    cursor pointer

.ui-address
    display flex
    align-items center

    img
        padding-right 13px

.ui-phone
    font-family 'Panton'
    font-size 20px
    line-height 32px
    text-transform uppercase

.ui-menu
    font-family 'Panton'
    font-size 16px
    line-height 32px
    padding 0 40px 0 0
    justify-content space-between

    a
        color #050505
        text-decoration none

.ui-menu__link
    &:hover
        color #439fac
        border-bottom 3px solid #439fac
        cursor pointer

.ui-callback
    padding 0
