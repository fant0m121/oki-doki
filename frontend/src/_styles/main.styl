.ui-step
    background $color-platinum
    flex 1
    padding-left 77px
    margin-left -77px
    padding-right 54px
    overflow hidden

    &:first-child
        padding-right 54px
        margin-left 0
        padding-left 0

    &:last-child
        padding-right 0

    &__title
        padding-left 10px

    &__first
        display flex
        align-items center
        color #fff
        background $color-darkcoral
        height 92px
        padding 16px 12px
        position relative
        margin 0

        &:after
            border 47px solid transparent
            content ''
            border-left 40px solid $color-darkcoral
            width 0
            height 0
            position absolute
            display block
            right -86px
            top 0
            background #fff

    &__center
        display flex
        align-items center
        height 92px
        padding 16px 12px
        position relative

        &:before
            content ''
            border-top 47px solid $color-platinum
            border-bottom 47px solid $color-platinum
            border-left 40px solid transparent
            left -40px
            top 0
            width 0
            height 0
            position absolute
            display block

        &:after
            border 47px solid transparent
            content ''
            border-left 40px solid $color-platinum
            width 0
            height 0
            position absolute
            display block
            right -86px
            top 0
            background #fff

    &__last
        display flex
        align-items center
        height 92px
        padding 16px 12px
        position relative

        &:before
            content ''
            border-top 47px solid $color-platinum
            border-bottom 47px solid $color-platinum
            border-left 40px solid transparent
            left -40px
            top 0
            width 0
            height 0
            position absolute
            display block

