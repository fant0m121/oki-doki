    header.ui-header 
        .ui-header__content
            .grid.grid-container.ui-restriction
                .row.row--lg-center
                    .col.col--lg-3
                        a.ui-header__logo
                            img(src="/images/header-logo.png")
                    .col.col--lg-6.col--lg-flex.ui-header__info
                        .ui-slogan  Производство и продажа#[br] офисных перегородок
                        .ui-address
                            img(src="/images/location.png")
                            Г. МОСКВА,#[br]  СОКОЛЬНИЧЕСКИЙ ВАЛ, 1А
                        .ui-regim
                            ПН-ЧТ 9:00 — 19:00#[br]
                            ПТ 9:00 — 18:00
                    .col.col--lg-3.text--lg-right
                        .ui-phone 8 (495) 663 18 81
        .ui-header__menu
    
    main
        block content
    footer footer

    block scripts
        script(src= baseUrl + 'scripts/main.js')
